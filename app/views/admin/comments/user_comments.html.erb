<p class="notice"><%= notice %></p>
<h1>ユーザーのコメント一覧</h1>
<%= render 'admin/posts/user', user: @user %>
<p class="admin-return"><%= link_to "← ユーザー一覧に戻る", admin_users_path %></p>
<table class="table-1 center-block text-center">
  <thead>
    <tr>
      <th>投稿ID</th>
      <th>コメントID</th>
      <th>内容</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= link_to admin_post_path(comment.post) do %><%= comment.post_id %><% end %></td>
        <td><%= comment.id %></td>
        <td><%= comment.comment %></td>
        <td>
          <p class="<%= comment.is_active ? 'text-primary' : 'text-danger' %>">
            <b><%= comment.is_active ? '有効' : '削除済み' %></b>
          </p>
          <% if comment.is_active %>
            <%= link_to "削除する", admin_comment_path(comment), method: :patch, data: { confirm: '本当に削除しますか？' } %>
          <% else %>
            <%= link_to "復帰させる", admin_comment_path(comment), method: :patch, data: { confirm: '本当に復帰させますか？' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<p class="admin-return"><%= link_to "← ユーザー一覧に戻る", admin_users_path %></p>