<h1>ユーザー管理</h1>
<table class="table-1">
  <thead>
    <tr>
      <th>ユーザーID</th>
      <th>ユーザー名</th>
      <th>スクリーンネーム</th>
      <th>メールアドレス</th>
      <th>データ</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.screen_name %></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to "投稿一覧", admin_user_posts_path(user) %><br>
          <%= link_to "コメント一覧", admin_user_comments_path(user) %><br>
          <%= link_to "Favorite一覧", admin_user_favs_path(user) %><br>
          <%= link_to "フォロー一覧", admin_following_path(user) %><br>
          <%= link_to "フォロワー一覧", admin_follower_path(user) %>
        </td>
        <td class="<%= user.is_active ? 'text-body-secondary fst-italic' : 'text-secondary' %>"><%= user.is_active ? '有効' : '退会済み' %></td>
      </tr>
    <% end %>
  </tbody>