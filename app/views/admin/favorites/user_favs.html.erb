<p class="notice"><%= notice %></p>
<h1>ユーザーのFavorite一覧</h1>
<%= render 'admin/posts/user', user: @user %>
<p class="admin-return"><%= link_to '←戻る', :back %></p>
<p class="admin-return"><%= link_to "← ユーザー一覧に戻る", admin_users_path %></p>

<table class="table-1 center-block text-center">
  <thead>
    <tr>
      <th>イメージ</th>
      <th>投稿ID</th>

      <th>Favorite ID</th>
    </tr>
  </thead>
  <tbody>
    <% @favorites.each do |favorite| %>
      <tr>
        <td>
          <%= link_to admin_post_path(favorite.post_id) do%>
            <%= favorite.post_id %>
          <% end %>
        </td>
        <td><%= image_tag favorite.post.get_post_image(80,80) %></td>
        <td><%= favorite.id %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p class="admin-return"><%= link_to '←戻る', :back %></p>
<p class="admin-return"><%= link_to "← ユーザー一覧に戻る", admin_users_path %></p>
