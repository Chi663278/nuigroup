<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<h1>Log in page<br>(administrator)</h1>
<h4>メールアドレスとパスワードを入力</h4>
<section id="input">
  <div class="inner">
    <%= form_with model: @admin, url: session_path(resource_name), local: true do |f| %>

      <div class="field">
        <%= f.label :email, class: "form-label" %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control mb-3", autofocus: true, placeholder: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "form-label" %><br />
        <%= f.password_field :password, class: "form-control mb-3", autofocus: true, placeholder: "password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions text-center">
        <%= f.submit "Log in", class: "btn btn-light btn-light-s"%>
      </div>
    <% end %>
  </div>
</section>