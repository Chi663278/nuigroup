<section id="input">
  <div class="inner-white">
    <h1>Edit profile</h1>
    <div class="text-center">
      <%= image_tag @user.get_user_image(300,300),class: "rounded shadow mb-3" %>
      <p class="login-user">user: <%= @user.name %> / ID: <%= @user.screen_name %></p>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    </div>

    <%= form_with model: @user do |f| %>

      <div class="field">
        <%= f.label :image, class: "form-label" %>
        <span class="btn btn-file btn-info mb-3"><%= f.file_field :image, accept: "image/*" %>画像選択</span>
      </div>

      <div class="field">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, class: "form-control mb-3", autofocus: true, placeholder: "name（必須入力）" %>
      </div>

      <div class="field">
        <%= f.label :email, class: "form-label" %>
        <%= f.text_field :email, class: "form-control mb-3", placeholder: "email（有効なアドレスを入力してください）" %>
      </div>

      <div class="field">
        <%= f.label :bio, class: "form-label" %>
        <%= f.text_area :bio, class: "form-control mb-3", placeholder: "コメントを入力してください" %>
      </div>

      <div class="actions text-center">
        <%= f.submit "Save", class: "btn btn-light btn-light-s" %>
      </div>
    <% end %>

  </div>
</section>