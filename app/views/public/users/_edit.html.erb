<section id="input">
  <div class="modal-content">
    <div class="inner-white">
      <h1>Edit profile</h1>
      <div class="text-center">
        <p class="notice"><%= notice %></p>
        <% if current_user.errors.any? %>
          <%= current_user.errors.count %>件のエラー
          <ul>
            <% current_user.errors.full_messages.each do |message| %>
              <ul><%= message %></ul>
            <% end %>
          </ul>
        <% end %>
      </div>
      <div class="text-center">
        <div id="new-image" class="text-center"><%= image_tag current_user.get_user_image(300,300), class: "new-img rounded shadow mb-3" %></div>
        <p class="login-user">user: <%= current_user.name %> / ID: <%= current_user.screen_name %></p>
      </div>

      <%= form_with model: current_user, local: false do |f| %>

        <div class="field">
          <%= f.label :image, class: "form-label" %>
          <span class="btn btn-file btn-info mb-3"><%= f.file_field :image, accept: "image/*" %>画像選択</span>
        </div>

        <div class="field">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control mb-3", autofocus: true, placeholder: "name（必須入力）" %>
        </div>

        <div class="field">
          <%= f.label :email, class: "form-label" %>
          <%= f.text_field :email, class: "form-control mb-3", placeholder: "email（有効なアドレスを入力してください）" %>
        </div>

        <div class="field">
          <%= f.label :bio, class: "form-label" %>
          <%= f.text_area :bio, class: "form-control mb-3", placeholder: "コメントを入力してください" %>
        </div>

        <div class="actions text-center">
          <%= f.submit "Save", class: "btn btn-light btn-light-s" %>
        </div>
      <% end %>

      <br>
      <p class="text-right"><%= link_to "→退会手続きはこちら", user_withdraw_path %></p>

    </div>
  </div>
</section>