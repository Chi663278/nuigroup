<% users.each do |user| %>
  <div class="inner-white-s">
    <%= link_to user_timeline_path(user.screen_name) do %>
      <table>
        <tr><td>Image：　</td><td><b><%= image_tag user.get_user_image(100,100), class: "rounded shadow mb-3" %></b></td></tr>
        <tr><td>ID：　</td><td><b><%= user.screen_name %></b></td></tr>
        <tr><td>Name：　</td><td><b><%= user.name %></b></td></tr>
        <tr><td>Email：　</td><td><b><%= user.email %></b></td></tr>
      </table>
    <% end %>
  </div>
<% end %>