<p class="notice"><%= notice %></p>
<h1>Timeline</h1>
<% @posts.each do |post| %>
  <%= link_to user_timeline_path(screen_name: post.user.screen_name) do %>
    <%= image_tag post.user.get_user_image(100,100), class: "shadow" %>
  <% end %>
  <p><%= post.user.name %> / <%= post.user.screen_name %></p>
  <%= link_to 'delete', delete_post_path(post), method: :patch, data: { confirm: '本当に削除しますか？' } %>
  <%= image_tag post.get_post_image(500,500), class: "shadow mb-3" %>
  <%= post.caption %>
<% end %>

