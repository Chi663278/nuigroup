<section id="input">
  <div class="inner-white">
    <h1>Comment</h1>
    <p class="notice"><%= notice %></p>

    <%= form_with model: @postcomment do |f| %>
      <div class="field">
      <%= f.label :comment, class: "form-label" %>
      <%= f.text_field :comment, class: "form-control mb-3", autofocus: true, placeholder: "コメントを入力" %>
      </div>

      <div class="actions text-center">
        <%= f.submit "Send", class: "btn btn-light btn-light-s" %>
      </div>
    <% end %>

  </div>
</section>

