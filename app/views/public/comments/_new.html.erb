<section id="input">
  <div class="modal-content">
    <div class="inner-white">
      <h1>Comment</h1>
      <div class="text-center">
        <p class="notice"><%= notice %></p>
      </div>

      <%= form_with model: [post, comment], url: post_comments_path, local: false do |f| %>
        <div class="field">
        <%= f.label :comment, class: "form-label" %>
        <%= f.text_field :comment, class: "form-control mb-3", autofocus: true, placeholder: "コメントを入力" %>
        </div>

        <div class="actions text-center">
          <%= f.submit "Send", class: "btn btn-light btn-light-s" %>
        </div>
      <% end %>
    </div>
  </div>
</section>

