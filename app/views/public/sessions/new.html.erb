<h1>Log in page</h1>
<h4>IDとパスワードを入力</h4>


<%= form_with model: @user, url: session_path(resource_name), local: true do |f| %>
  <div class="field">
    <%= f.label :screen_name %><br />
    <%= f.text_field :screen_name, autofocus: true, autocomplete: " ID " %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<h2><%= link_to "→Sign up", new_user_registration_path %></h2>