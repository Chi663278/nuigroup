<h1>Log in page</h1>
<h4>IDとパスワードを入力</h4>
<section id="input">
  <div class="inner">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= form_with model: @user, url: session_path(resource_name), local: true do |f| %>

      <div class="field">
        <%= f.label :screen_name, class: "form-label" %><br />
        <%= f.text_field :screen_name, class: "form-control mb-3", autofocus: true, autocomplete: " ID " %>
      </div>

      <div class="field">
        <%= f.label :password, class: "form-label" %><br />
        <%= f.password_field :password, class: "form-control mb-3", autocomplete: "password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me, class: "checkbox" %>
          <%= f.label :remember_me, class: "form-label-s" %>
        </div>
      <% end %>

      <div class="actions text-center">
        <%= f.submit "Log in", class: "btn btn-light btn-light-s" %>
      </div>
    <% end %>

    <h2 class="text-right jump"><%= link_to "→Sign up", new_user_registration_path %></h2>
  </div>
</section>
